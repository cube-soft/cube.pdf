<Window
    x:Class="Cube.Pdf.App.Editor.PreviewWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
    xmlns:xb="clr-namespace:Cube.Xui.Behaviors;assembly=Cube.Xui"
    xmlns:my="clr-namespace:Cube.Pdf.App.Editor"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    FontFamily="Meiryo UI"
    WindowStartupLocation="CenterOwner"
    ShowInTaskbar="False"
    Title="{Binding Title.Text}"
    Width="{Binding Data.Width.Value}"
    Height="{Binding Data.Height.Value}"
    Cursor="{Binding Data.IsBusy.Value, Converter={my:BooleanToCursor}}">

    <!-- **********************************************************************
      Interaction
    *********************************************************************** -->
    <i:Interaction.Behaviors>
        <xb:CloseBehavior />
    </i:Interaction.Behaviors>

    <!-- **********************************************************************
      Main
    *********************************************************************** -->
    <ScrollViewer Background="{StaticResource DarkBackgroundBrush}">
        <Button Command="{Binding Cancel.Command}">
            <Button.Template>
                <ControlTemplate TargetType="{x:Type Button}">
                    <Image
                        Source="{Binding Data.Image.Value}"
                        Stretch="UniformToFill"
                        VerticalAlignment="Center" />
                </ControlTemplate>
            </Button.Template>
        </Button>
    </ScrollViewer>
</Window>
