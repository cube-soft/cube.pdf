<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:r="clr-namespace:Microsoft.Windows.Controls.Ribbon;assembly=RibbonControlsLibrary"
    xmlns:fs="clr-namespace:Cube.FileSystem;assembly=Cube.FileSystem"
    xmlns:xc="clr-namespace:Cube.Xui.Converters;assembly=Cube.Xui">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="pack://application:,,,/Themes/ScrollStyle.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <!-- **********************************************************************
      RibbonRecentCollection
    *********************************************************************** -->
    <ControlTemplate x:Key="RibbonRecentCollectionTemplate" TargetType="{x:Type ListBox}">
        <ScrollViewer
            Background="{StaticResource WindowBackgroundBrush}"
            Foreground="{StaticResource WindowForegroundBrush}"
            Template="{StaticResource ScrollViewerTemplate}"
            BorderThickness="0"
            HorizontalScrollBarVisibility="Disabled">
            <StackPanel
                Orientation="Vertical"
                IsItemsHost="True" />
        </ScrollViewer>
    </ControlTemplate>

    <!-- **********************************************************************
      RibbonRecentItem
    *********************************************************************** -->
    <DataTemplate x:Key="RibbonRecentItemTemplate" DataType="{x:Type fs:Information}">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="16" />
                <ColumnDefinition Width="6"  />
                <ColumnDefinition Width="*"  />
            </Grid.ColumnDefinitions>

            <Image
                Source="pack://application:,,,/Assets/Small/Pdf.png"
                Stretch="Uniform" />

            <TextBlock
                Text="{Binding NameWithoutExtension}"
                TextWrapping="NoWrap"
                TextTrimming="CharacterEllipsis"
                Grid.Column="2" />
        </Grid>
    </DataTemplate>
</ResourceDictionary>