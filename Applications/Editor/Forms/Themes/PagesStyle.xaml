<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
    xmlns:my="clr-namespace:Cube.Pdf.App.Editor">

    <!-- **********************************************************************
      Import
    *********************************************************************** -->
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="pack://application:,,,/Themes/ScrollStyle.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <!-- **********************************************************************
      ListView (Template)
    *********************************************************************** -->
    <ControlTemplate x:Key="PageCollectionTemplate" TargetType="{x:Type ListView}">
        <ScrollViewer
            DataContext="{Binding Preferences}"
            Background="{StaticResource DarkBackgroundBrush}"
            Template="{StaticResource ScrollViewerTemplate}"
            HorizontalScrollBarVisibility="Disabled">
            <WrapPanel
                ItemWidth="{Binding ItemSize}"
                ItemHeight="{Binding ItemSize}"
                MinWidth="{Binding ItemSize}"
                Width="{Binding FrameworkElement.ActualWidth,
                RelativeSource={RelativeSource AncestorType=ScrollContentPresenter}}"
                IsItemsHost="True" />
            <i:Interaction.Behaviors>
                <my:VisibleRange
                    First="{Binding VisibleFirst, Mode=TwoWay}"
                    Last="{Binding VisibleLast, Mode=TwoWay}"
                    ItemSize="{Binding ItemSize}"
                    ItemMargin="{Binding ItemMargin}" />
            </i:Interaction.Behaviors>
        </ScrollViewer>
    </ControlTemplate>

    <!-- **********************************************************************
      ListView
    *********************************************************************** -->
    <Style x:Key="PageCollectionStyle" TargetType="{x:Type ListView}">
        <Setter Property="Background" Value="{StaticResource DarkBackgroundBrush}" />
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="HorizontalContentAlignment" Value="Center" />
        <Setter Property="VerticalContentAlignment" Value="Center" />
        <Setter Property="SelectionMode" Value="Extended" />
        <Setter Property="Template" Value="{StaticResource PageCollectionTemplate}" />
    </Style>

    <!-- **********************************************************************
      ListViewItem
    *********************************************************************** -->
    <Style x:Key="PageStyle" TargetType="{x:Type ListViewItem}">
        <Setter Property="Margin" Value="3" />
        <Setter Property="IsSelected" Value="{Binding IsSelected, Mode=OneWay}" />
    </Style>

    <!-- **********************************************************************
      ListViewItem (DataTemplate)
    *********************************************************************** -->
    <DataTemplate x:Key="PageTemplate" DataType="{x:Type my:ImageEntry}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <Border
                Width="{Binding Width}"
                Height="{Binding Height}"
                BorderThickness="1"
                BorderBrush="{StaticResource DarkBorderBrush}"
                HorizontalAlignment="Center"
                VerticalAlignment="Center">
                <Image
                    Source="{Binding Image}"
                    Stretch="None"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center" />
            </Border>

            <TextBlock
                Grid.Row="1"
                Text="{Binding Index, Converter={my:IndexToText}}"
                TextAlignment="Center"
                Foreground="{StaticResource DarkForegroundBrush}" />
        </Grid>
    </DataTemplate>
</ResourceDictionary>