<Window
    x:Class="Cube.Pdf.App.Editor.MetadataWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
    xmlns:xb="clr-namespace:Cube.Xui.Behaviors;assembly=Cube.Xui"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="{Binding Title.Text}"
    Height="540"
    Width="470"
    WindowStartupLocation="CenterOwner"
    ResizeMode="NoResize"
    ShowInTaskbar="False">

    <!-- **********************************************************************
      Resources
    *********************************************************************** -->
    <Window.Resources>
        <ResourceDictionary Source="pack://application:,,,/Themes/GenericDialog.xaml" />
    </Window.Resources>

    <!-- **********************************************************************
      Interaction
    *********************************************************************** -->
    <i:Interaction.Behaviors>
        <xb:CloseBehavior />
    </i:Interaction.Behaviors>

    <!-- **********************************************************************
      Main
    *********************************************************************** -->
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="60" />
        </Grid.RowDefinitions>

        <!-- ******************************************************************
          Summary
        ******************************************************************* -->
        <GroupBox
            Header="{Binding Summary.Text}"
            Margin="{StaticResource VerticalFirst}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="100" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition Height="24" />
                    <RowDefinition Height="28" />
                    <RowDefinition Height="28" />
                    <RowDefinition Height="28" />
                    <RowDefinition Height="28" />
                </Grid.RowDefinitions>

                <!-- **********************************************************
                  Filename
                *********************************************************** -->
                <TextBlock
                    Text="{Binding Filename.Text}"
                    Grid.Row="0"
                    Grid.Column="0" />
                <TextBlock
                    Text=""
                    Grid.Row="0"
                    Grid.Column="1" />

                <!-- **********************************************************
                  DocumentTitle
                *********************************************************** -->
                <TextBlock
                    Text="{Binding DocumentTitle.Text}"
                    Grid.Row="1"
                    Grid.Column="0" />
                <TextBox
                    Text=""
                    Grid.Row="1"
                    Grid.Column="1" />

                <!-- **********************************************************
                  Author
                *********************************************************** -->
                <TextBlock
                    Text="{Binding Author.Text}"
                    Grid.Row="2"
                    Grid.Column="0" />
                <TextBox
                    Text=""
                    Grid.Row="2"
                    Grid.Column="1" />

                <!-- **********************************************************
                  Subject
                *********************************************************** -->
                <TextBlock
                    Text="{Binding Subject.Text}"
                    Grid.Row="3"
                    Grid.Column="0" />
                <TextBox
                    Text=""
                    Grid.Row="3"
                    Grid.Column="1" />

                <!-- **********************************************************
                  Keywords
                *********************************************************** -->
                <TextBlock
                    Text="{Binding Keywords.Text}"
                    Grid.Row="4"
                    Grid.Column="0" />
                <TextBox
                    Text=""
                    Grid.Row="4"
                    Grid.Column="1" />
            </Grid>
        </GroupBox>

        <!-- ******************************************************************
          Details
        ******************************************************************* -->
        <GroupBox
            Header="{Binding Details.Text}"
            Margin="{StaticResource VerticalLast}"
            Grid.Row="1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="100" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition Height="28" />
                    <RowDefinition Height="28" />
                    <RowDefinition Height="28" />
                    <RowDefinition Height="24" />
                    <RowDefinition Height="24" />
                    <RowDefinition Height="24" />
                    <RowDefinition Height="24" />
                </Grid.RowDefinitions>

                <!-- **********************************************************
                  Version
                *********************************************************** -->
                <TextBlock
                    Text="{Binding Version.Text}"
                    Grid.Row="0"
                    Grid.Column="0" />
                <ComboBox
                    Grid.Row="0"
                    Grid.Column="1" />

                <!-- **********************************************************
                  Layout (a.k.a viewer preferences)
                *********************************************************** -->
                <TextBlock
                    Text="{Binding Layout.Text}"
                    Grid.Row="1"
                    Grid.Column="0" />
                <ComboBox
                    Grid.Row="1"
                    Grid.Column="1" />

                <!-- **********************************************************
                  Creator
                *********************************************************** -->
                <TextBlock
                    Text="{Binding Creator.Text}"
                    Grid.Row="2"
                    Grid.Column="0" />
                <TextBox
                    Text=""
                    Grid.Row="2"
                    Grid.Column="1" />

                <!-- **********************************************************
                  Producer
                *********************************************************** -->
                <TextBlock
                    Text="{Binding Producer.Text}"
                    Grid.Row="3"
                    Grid.Column="0" />
                <TextBlock
                    Text=""
                    Grid.Row="3"
                    Grid.Column="1" />

                <!-- **********************************************************
                  Length (file size)
                *********************************************************** -->
                <TextBlock
                    Text="{Binding Length.Text}"
                    Grid.Row="4"
                    Grid.Column="0" />
                <TextBlock
                    Text=""
                    Grid.Row="4"
                    Grid.Column="1" />

                <!-- **********************************************************
                  CreationTime
                *********************************************************** -->
                <TextBlock
                    Text="{Binding CreationTime.Text}"
                    Grid.Row="5"
                    Grid.Column="0" />
                <TextBlock
                    Text=""
                    Grid.Row="5"
                    Grid.Column="1" />

                <!-- **********************************************************
                  LastWriteTime
                *********************************************************** -->
                <TextBlock
                    Text="{Binding LastWriteTime.Text}"
                    Grid.Row="6"
                    Grid.Column="0" />
                <TextBlock
                    Text=""
                    Grid.Row="6"
                    Grid.Column="1" />
            </Grid>
        </GroupBox>

        <!-- ******************************************************************
          Buttons
        ******************************************************************* -->
        <StackPanel
            Style="{StaticResource DialogFooterStyle}"
            Grid.Row="3">
            <Button
                Content="{Binding Cancel.Text}"
                Command="{Binding Cancel.Command}"
                Style="{StaticResource CancelButtonStyle}" />
            <Button
                Content="{Binding OK.Text}"
                Command="{Binding OK.Command}"
                Style="{StaticResource DialogButtonStyle}" />
        </StackPanel>
    </Grid>
</Window>
