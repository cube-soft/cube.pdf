<Window
    x:Class="Cube.Pdf.App.Editor.InsertWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
    xmlns:xb="clr-namespace:Cube.Xui.Behaviors;assembly=Cube.Xui"
    xmlns:my="clr-namespace:Cube.Pdf.App.Editor"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="{Binding Title.Text}"
    Height="380"
    Width="680"
    FontFamily="Meiryo UI"
    WindowStartupLocation="CenterOwner"
    ResizeMode="NoResize"
    ShowInTaskbar="False">

    <!-- **********************************************************************
      Resources
    *********************************************************************** -->
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/Themes/GenericDialog.xaml" />
                <ResourceDictionary Source="pack://application:,,,/Themes/InsertStyle.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <!-- **********************************************************************
      Interaction
    *********************************************************************** -->
    <i:Interaction.Behaviors>
        <xb:DialogBehavior />
        <xb:OpenFileDialogBehavior />
        <xb:CloseBehavior />
    </i:Interaction.Behaviors>

    <!-- **********************************************************************
      Main
    *********************************************************************** -->
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="60" />
        </Grid.RowDefinitions>

        <!-- ******************************************************************
          Position
        ******************************************************************* -->
        <GroupBox
            Header="{Binding Position.Text}"
            Margin="{StaticResource VerticalFirst}"
            Grid.Row="0">
            <StackPanel Orientation="Horizontal">
                <!-- **********************************************************
                  Selected
                *********************************************************** -->
                <RadioButton
                    Content="{Binding Selected.Text}"
                    IsEnabled="{Binding Selected.Value}">
                    <i:Interaction.Behaviors>
                        <my:InsertPositionBehavior
                            Command="{Binding Position.Command}"
                            CommandParameter="{Binding Data.SelectedIndex}" />
                    </i:Interaction.Behaviors>
                </RadioButton>

                <!-- **********************************************************
                  First
                *********************************************************** -->
                <RadioButton Content="{Binding First.Text}">
                    <i:Interaction.Behaviors>
                        <my:InsertPositionBehavior
                            Command="{Binding Position.Command}"
                            CommandParameter="{StaticResource Zero}" />
                    </i:Interaction.Behaviors>
                </RadioButton>

                <!-- **********************************************************
                  Last
                *********************************************************** -->
                <RadioButton Content="{Binding Last.Text}">
                    <i:Interaction.Behaviors>
                        <my:InsertPositionBehavior
                            Command="{Binding Position.Command}"
                            CommandParameter="{Binding Data.Count}" />
                    </i:Interaction.Behaviors>
                </RadioButton>

                <!-- **********************************************************
                  UserSpecified
                *********************************************************** -->
                <RadioButton
                    x:Name="SpecifiedRadioButton"
                    Content="{Binding UserSpecified.Text}"
                    IsChecked="True">
                    <i:Interaction.Behaviors>
                        <my:InsertPositionBehavior
                            Command="{Binding Position.Command}"
                            CommandParameter="{Binding UserSpecified.Value}" />
                    </i:Interaction.Behaviors>
                </RadioButton>

                <StackPanel
                    Orientation="Horizontal"
                    IsEnabled="{Binding IsChecked, ElementName=SpecifiedRadioButton}">
                    <TextBox
                        Text="{Binding UserSpecified.Value}"
                        Style="{StaticResource InsertPositionStyle}" />
                    <TextBlock Text="{Binding UserSpecifiedSuffix.Text}" />
                </StackPanel>
            </StackPanel>
        </GroupBox>

        <!-- ******************************************************************
          Contents
        ******************************************************************* -->
        <Grid
            Margin="{StaticResource VerticalLast}"
            Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <ListView Style="{StaticResource InsertFilesStyle}" />

            <StackPanel Orientation="Vertical" Grid.Column="1">
                <Button
                    Content="{Binding Add.Text}"
                    Command="{Binding Add.Command}"
                    Style="{StaticResource TopButtonStyle}" />
                <Button
                    Content="{Binding Up.Text}"
                    Command="{Binding Up.Command}"
                    Style="{StaticResource DialogButtonStyle}" />
                <Button
                    Content="{Binding Down.Text}"
                    Command="{Binding Down.Command}"
                    Style="{StaticResource DialogButtonStyle}" />
                <Button
                    Content="{Binding Remove.Text}"
                    Command="{Binding Remove.Command}"
                    Style="{StaticResource DialogButtonStyle}" />
                <Button
                    Content="{Binding Clear.Text}"
                    Command="{Binding Clear.Command}"
                    Style="{StaticResource DialogButtonStyle}" />
            </StackPanel>
        </Grid>

        <!-- ******************************************************************
          Buttons
        ******************************************************************* -->
        <StackPanel
            Style="{StaticResource DialogFooterStyle}"
            Grid.Row="2">
            <Button
                Content="{Binding Cancel.Text}"
                Command="{Binding Cancel.Command}"
                Style="{StaticResource CancelButtonStyle}" />
            <Button
                Content="{Binding OK.Text}"
                Command="{Binding OK.Command}"
                IsDefault="True"
                Style="{StaticResource DialogButtonStyle}" />
        </StackPanel>
    </Grid>
</Window>
